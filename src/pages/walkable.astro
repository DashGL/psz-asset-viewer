---
import WalkableScene from '../components/WalkableScene';

const base = import.meta.env.BASE_URL;

// URLs for the stage and character
const stageUrl = `${base}wetlands_b`;
const characterUrl = `${base}player/pc_000/pc_000/pc_000_000.glb`;
const textureUrl = `${base}player/pc_000/textures/pc_000_000.png`;
const animationsUrl = `${base}player/animations/common/m/00_common_m/pc_000_000.glb`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Walkable Scene - PSZ Asset Viewer</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        width: 100%;
        height: 100%;
        overflow: hidden;
      }

      body {
        background: #0a0a0a;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      }
    </style>
  </head>
  <body>
    <WalkableScene
      client:only="react"
      stageUrl={stageUrl}
      characterUrl={characterUrl}
      textureUrl={textureUrl}
      animationsUrl={animationsUrl}
    />
  </body>
</html>
