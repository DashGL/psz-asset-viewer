---
import CityWalkableScene from '../components/CityWalkableScene';

const base = import.meta.env.BASE_URL;
const modelUrl = `${base}city_e/s00e_sa1/lndmd/s00e_sa1_m.glb`;
const characterUrl = `${base}player/pc_000/pc_000/pc_000_000.glb`;
const textureUrl = `${base}player/pc_000/textures/pc_000_000.png`;
const animationsUrl = `${base}player/animations/common/m/00_common_m/pc_000_000.glb`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>City Walkable Scene - PSZ Asset Viewer</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        width: 100%;
        height: 100%;
        overflow: hidden;
      }

      body {
        background: #0a0a0a;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      }
    </style>
  </head>
  <body>
    <CityWalkableScene
      client:only="react"
      modelUrl={modelUrl}
      characterUrl={characterUrl}
      textureUrl={textureUrl}
      animationsUrl={animationsUrl}
    />
  </body>
</html>
