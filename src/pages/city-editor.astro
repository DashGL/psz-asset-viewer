---
import CityEditorScene from '../components/CityEditorScene';

const base = import.meta.env.BASE_URL;
const modelUrl = `${base}city_e/s00e_sa1/lndmd/s00e_sa1_m.glb`;

// Available NPC assets
const availableAssets = [
  `${base}npc/bm_n_ebm_i_body.glb`,
  `${base}npc/Item Shop Owner.vrm`,
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>City Editor - PSZ Asset Viewer</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        width: 100%;
        height: 100%;
        overflow: hidden;
      }

      body {
        background: #0a0a0a;
        color: #ffffff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      }
    </style>
  </head>
  <body>
    <CityEditorScene
      client:only="react"
      modelUrl={modelUrl}
      availableAssets={availableAssets}
    />
  </body>
</html>
